datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model UserProfile {
  bio         String?
  createdAt   DateTime     @default(now())
  email       String?
  experiences Experience[]
  firstName   String?
  id          String       @id @default(cuid())
  lastName    String?
  phone       String?
  photo       Json?
  projects    Project[]
  socialLinks SocialLink[]
  updatedAt   DateTime     @updatedAt
}

model SocialLink {
  createdAt     DateTime     @default(now())
  id            String       @id @default(cuid())
  platform      String?
  updatedAt     DateTime     @updatedAt
  url           String?
  userProfile   UserProfile? @relation(fields: [userProfileId], references: [id])
  userProfileId String?
}

model Project {
  createdAt     DateTime     @default(now())
  description   String?
  id            String       @id @default(cuid())
  name          String?
  updatedAt     DateTime     @updatedAt
  url           String?
  userProfile   UserProfile? @relation(fields: [userProfileId], references: [id])
  userProfileId String?
}

model Experience {
  company       String?
  createdAt     DateTime     @default(now())
  description   String?
  endDate       DateTime?
  id            String       @id @default(cuid())
  startDate     DateTime?
  title         String?
  updatedAt     DateTime     @updatedAt
  userProfile   UserProfile? @relation(fields: [userProfileId], references: [id])
  userProfileId String?
}

model User {
  createdAt DateTime @default(now())
  email     String?  @unique
  firstName String?
  id        String   @id @default(cuid())
  lastName  String?
  password  String
  roles     Json
  updatedAt DateTime @updatedAt
  username  String   @unique
}
